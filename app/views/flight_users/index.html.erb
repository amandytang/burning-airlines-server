<p id="notice"><%= notice %></p>

<h1>Flight Users</h1>

<table>
  <thead>
    <tr>
      <th>Flight</th>
      <th>User</th>
      <th>Seat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flight_users.each do |flight_user| %>
      <tr>
        <td><%= flight_user.flight_id %></td>
        <td><%= flight_user.user_id %></td>
        <td><%= flight_user.seat %></td>
        <td><%= link_to 'Show', flight_user %></td>
        <td><%= link_to 'Edit', edit_flight_user_path(flight_user) %></td>
        <td><%= link_to 'Destroy', flight_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

